@page
@model WebTest2ebt.UI.Pages.Identity.Account.LoginModel

@{ ViewData["Title"] = "Вход"; }

<!-- START Login page -->

<div class="container-fluid bg-light py-3">
    <div class="col-md-6 m-auto text-center">
        <h1 class="h1">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container py-3">
    <div class="row py-3">
        <form class="col-md-9 m-auto" id="account" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control mt-1" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control mt-1" placeholder="Пароль">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="row">

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="col text-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Войти</button>
                </div>

                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>

            </div>
        </form>
    </div>
</div>

<!-- END Login page -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}