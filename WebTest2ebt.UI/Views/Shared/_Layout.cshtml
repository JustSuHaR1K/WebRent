                            </ul>
                        </li>
                        <li class="nav-item">
                            <a  asp-controller="Home" asp-action="Contact" class="nav-link" >Обратная связь</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar align-self-center d-flex">
                    @*@if (User.IsInRole(RolesNames.Admin))
        {*@

                    <!-- Для авторизированных-->
                    @if (SignInManager.IsSignedIn(User))
                    {


